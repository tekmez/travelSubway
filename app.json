{
  "expo": {
    "name": "MetroQuest",
    "slug": "metroquest",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "metroquest",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.tekmez.metroquest",
      "supportsTablet": false,
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "package": "com.tekmez.metroquest",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      }
    },
    "locales": {
      "en": "./locales/en.json",
      "tr": "./locales/tr.json",
      "de": "./locales/de.json",
      "ru": "./locales/ru.json"
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "@react-native-firebase/app",
      "@react-native-firebase/crashlytics",
      [
        "expo-build-properties",
        {
          "ios": { "useFrameworks": "static" }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

